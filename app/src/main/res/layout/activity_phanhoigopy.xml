<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".AdminActivity.Phanhoigopy_Activity">
<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:background="#FFC107"
    android:layout_height="50dp">
    <ImageView
        android:id="@+id/quaylai_dangbai"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/quaylai"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:text="Tạo bài viết"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_phanhoi"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:text="PHẢN HỒI"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/black"/>
    </LinearLayout>
</androidx.appcompat.widget.Toolbar>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgtk_dangbai"
        android:padding="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tentk_dangbai"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="BOOKSHOP"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:padding="10dp"/>
        <TextView
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Phản hồi góp ý "
            />
    </LinearLayout>


</LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_tenphanhoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/chude"
            android:ems="10"
            android:hint="ID tài khoản"
            android:inputType="textPersonName"
            android:paddingLeft="@dimen/size20dp"
            tools:ignore="SpeakableTextPresentCheck" />


    </com.google.android.material.textfield.TextInputLayout>
<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edt_tieude_phanhoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Tiêu đề bài viết"
        android:inputType="textPersonName"
        android:paddingLeft="@dimen/size20dp"
        tools:ignore="SpeakableTextPresentCheck" />


</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edt_noidung_phanhoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="start"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Nội dung bài viết"
        android:inputType="textMultiLine"
        android:paddingLeft="@dimen/size20dp"
        tools:ignore="SpeakableTextPresentCheck" />


</com.google.android.material.textfield.TextInputLayout>
<ImageView
    android:id="@+id/imghinh_phanhoi"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:padding="10dp"
    android:src="@drawable/bg_thongbao"
    />
<LinearLayout
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:gravity="center">
</LinearLayout>
<LinearLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center">
    <ImageView
        android:id="@+id/imageButtonCamera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:src="@drawable/camera"/>
    <ImageView
        android:id="@+id/imageButtonFolder"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/picture"/>
</LinearLayout>
</LinearLayout>