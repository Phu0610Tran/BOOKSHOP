<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/cardview_product"
    android:layout_height="match_parent"
    android:backgroundTint="#C1BFBF"
    android:orientation="vertical"
    tools:context=".ActivityUser.ThongBaoChitiet_Activity">
    <LinearLayout
        android:id="@+id/layoutdoanhthu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FF9800">

        <ImageButton
            android:id="@+id/ibtnExit_thongbao"
            android:scaleType="fitXY"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:layout_gravity="center"
            app:srcCompat="@drawable/quaylai"
            tools:ignore="SpeakableTextPresentCheck"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/title_qlhd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="18dp"
            android:gravity="center|left"
            android:text="Thông Báo"
            android:textSize="@dimen/size20dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <GridView

            android:id="@+id/gridview_bangtin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:numColumns="1" />
    </LinearLayout>
</LinearLayout>