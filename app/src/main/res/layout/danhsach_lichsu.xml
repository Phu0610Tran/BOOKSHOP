<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:padding="10dp"
        android:id="@+id/imageHinhlichsuCustom"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:src="@drawable/logo"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textviewTongTien_lichsu"
            android:text="Tổng tiền"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/size20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:inputType="text"
                android:text="Địa chỉ: "
                android:textColor="@color/black"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/textviewdc_lichsu"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="textMultiLine"
                android:text="Địa chỉ: "
                android:textSize="15sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:inputType="text"
                android:text="Ghi chú: "
                android:textColor="@color/black"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/textviewgc_lichsu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:inputType="text"
                android:text="Ghi chú: "
                android:textSize="15sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:inputType="text"
                android:text="Tình trạng đơn hàng: "
                android:textColor="@color/black"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/textviewtt_lichsu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:inputType="text"
                android:text="Ghi chú: "
                android:textSize="15sp"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>