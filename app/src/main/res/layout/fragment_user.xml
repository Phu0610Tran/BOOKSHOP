<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MyUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="56dp"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".User_Fragment.UserFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"

            android:background="#FFC107">

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/img_user_cn"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/user"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:paddingLeft="@dimen/size20dp"
                android:paddingTop="@dimen/size10dp"
                android:text="User"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#151515">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8.9"
                    android:background="@null"
                    android:padding="2dp"
                    android:src="@drawable/ic_baseline_verified_user_24" />

                <TextView

                    android:id="@+id/txtBaomat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Mật khẩu và bảo mật"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_dinh"
                    />
            </LinearLayout>

            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8.9"
                    android:background="@null"
                    android:padding="2dp"
                    android:src="@drawable/ic_baseline_phone_in_talk_24" />

                <TextView
                    android:id="@+id/txtDichvu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_dinh"
                    android:textStyle="bold"
                    android:text="Dịch vụ"
                    android:textSize="15sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/icon6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8.9"
                    android:background="@null"
                    android:padding="2dp"
                    android:src="@drawable/ic_baseline_history_24" />

                <TextView
                    android:id="@+id/txtLichsu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_dinh"
                    android:text="Lịch sử giao dịch"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="15sp"
                     />
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8.9"
                    android:background="@null"
                    android:padding="2dp"
                    android:src="@drawable/ic_baseline_support_agent_24" />

                <TextView
                    android:id="@+id/txtHoTroKhachHang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textStyle="bold"
                    android:text="Trung Tâm Hổ Trợ"
                    android:textSize="15sp"
                    android:padding="10dp"                    android:gravity="center"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_dinh"
                    />
            </LinearLayout>

            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/icon4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8.9"
                    android:background="@null"
                    android:padding="2dp"
                    android:src="@drawable/ic_baseline_star_border_24" />
                <FrameLayout
                    android:layout_weight="1.1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtDanhGia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Đánh giá"
                        android:textSize="15sp"
                        android:padding="10dp"                    android:gravity="center"
                        android:textColor="@color/black"
                        android:background="@drawable/bg_dinh"
                        />
                    <TextView
                        android:background="@drawable/custom_countdanhgia"
                        android:layout_marginRight="20dp"
                        android:id="@+id/count_danhgia"
                        android:layout_gravity="right|center_vertical"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="0"/>
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</LinearLayout>